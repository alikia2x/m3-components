{
	"extends": ["astro/tsconfigs/strict", "../tsconfig.base.json"],
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@lib/*": ["src/lib/*"],
			"@assets/*": ["src/assets/*"],
			"@styles": ["src/styles/*"],
			"@core/*": ["../core/*"]
		}
	},
	"references": [{ "path": "./tsconfig.solid.json" }]
}
